header
  nav
    .nav-wrapper.light-blue
      a.brand-logo.left(href='/') Vote App
      ul.right
        if !loggedUser
          li
            a(href='/login') Log In
          li
            a(href='/signup') Sign Up
        else          
          a.dropdown-trigger(data-target='dropdown') #{loggedUser.username}
          ul.dropdown-content(id='dropdown')
            li
              a(href='/mypolls') My Polls
            li
              a(href='/setting') Setting
            li
              a(href='/logout') Log Out
      if path === '/' || path === '/mypolls'
        a.btn-flat.right.dropdown-trigger.white-text#filterButton(data-target='filter')
          i.material-icons filter_list
        ul.dropdown-content(id='filter')
          li
            a(href= path + '?sort=mv') Most voted
          li
            a(href= path + '?sort=do') Date added (oldest)
          li
            a(href= path) Date added (newest)
  script.
    $('.dropdown-trigger').dropdown({
      coverTrigger: false,
      constrainWidth: false
    });