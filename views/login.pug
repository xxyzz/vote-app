extends layout

block content
  h2.center-align Log In
  .formContainor.z-depth-3.col.s12.m6.offset-m3
    .col.s6.form_button
      a.waves-effect.waves-light.btn.blue(href='/auth/twitter') Twitter
    .col.s6.form_button
      a.waves-effect.waves-light.btn.black(href='/auth/github') Github
    .col.s12.or
      hr
      span OR
    form(action="/auth/login" method="post")
      .input-field.col.s12
        input.validate(id="username" name="username" type="text" required)
        label(for="username")User Name
      .input-field.col.s12
        input.validate(id="password" name="password" type="password" required)
        label(for="password")Password
      .col.s12.form_button
        button.waves-effect.waves-light.btn(type="submit")Log In
