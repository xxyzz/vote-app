extends layout

block content
  h2.center-align Sign Up
  .formContainor.z-depth-3.col.s12.m6.offset-m3
    .col.s6.form_button
      a.waves-effect.waves-light.btn.blue(href='/auth/twitter') Twitter
    .col.s6.form_button
      a.waves-effect.waves-light.btn.black(href='/auth/github') Github
    .col.s12.or
      hr
      span OR
    form(action="/auth/signup" method="post")
      .input-field.col.s12
        input(id="username" name="username" type="text" required minlength="3" maxlength="12")
        label(for="username" data-error="Try different name" data-success="OK") User Name
      .input-field.col.s12
        input(id="password" name="password" type="password" required minlength="6" maxlength="12")
        label(for="password") Password
      .col.s12(style="margin: 1em auto")
        input(type="checkbox" class="filled-in" id="show_password")
        label(for="show_password") Show password
      .col.s12
        .g-recaptcha(data-sitekey="6LdsijAUAAAAALKXnK_WWZlyEjXKpxk_T-Rwp4dp")
      .col.s12.form_button
        button.waves-effect.waves-light.btn(id="submit" type="submit") Sign Up
      script(src='https://www.google.com/recaptcha/api.js' async)
      script.
        function toggler() {
          if( document.getElementById('show_password').checked ) {
            $('#password').attr('type', 'text');
          } else {
            $('#password').attr('type', 'password');
          }
        }
        $('#show_password').click(toggler);